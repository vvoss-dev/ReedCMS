{# Knowledge Main Layout - Overview page with intro and index #}

{% set pagekey = "knowledge" %}

{% extends layout("page") %}

{% block content %}
    {# Intro Section #}
    <section class="section intro padding-y-3 padding-x-4">
        <article class="breakbox grid-1 gap-3">
            <div class="section-header padding-left-2">
                <h1>{{ 'knowledge.intro.title' | text('auto') }}</h1>
            </div>

            <div class="grid-1 gap-3">
                <div class="column grid-1 gap-y-1">
                    <p>{{ 'knowledge.intro.description' | text('auto') }}</p>
                </div>
            </div>
        </article>
    </section>

    {# Knowledge Index Organism #}
    {% include organism("knowledge-index") %}
{% endblock %}
