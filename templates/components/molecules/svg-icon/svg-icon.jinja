{# SVG-Icon Molecule - Intelligent Feather Icon Wrapper #}
{# Usage: {{ svg_icon(icon="home", size="24", class="nav-icon", alt="Home") }} #}

{% macro svg_icon(icon, size, class, alt) %}
<svg class="{{ class }}" width="{{ size }}" height="{{ size }}" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" role="img" aria-label="{{ alt }}">
{%- set icon_template = "components/atoms/icons/" ~ icon ~ ".jinja" -%}
{%- include icon_template -%}
</svg>
{% endmacro %}
