{# Landing Hero Organism - Touch interaction mode #}

<section class="section hero padding-y-2 padding-x-1">
    <article class="breakbox grid-2">
        <div class="hero-content grid-1 gap-y-2">
            {# Badges #}
            <div class="hero-badges flex-x gap-1">
                <span class="badge time padding-1">{{ 'landing.hero.badge.experience' | text('auto') }}</span>
                <span class="badge audience padding-1">{{ 'landing.hero.badge.audience' | text('auto') }}</span>
                <span class="badge topic padding-1">{{ 'landing.hero.badge.topic' | text('auto') }}</span>
            </div>

            {# Headline #}
            <h1>{{ 'landing.hero.headline' | text('auto') }}</h1>

            {# Subtitle #}
            <p class="hero-subtitle">
                {{ 'landing.hero.subtitle' | text('auto') }}
            </p>

            {# Description #}
            <p class="hero-description body-large">
                {{ 'landing.hero.description' | text('auto') }}
            </p>

            {# CTA #}
            <a href="#contact" class="cta padding-y-1 padding-x-2">
                {{ 'landing.hero.cta.primary' | text('auto') }}
            </a>
        </div>

        <div class="hero-side">
            {# Optional: Space for image or additional content #}
        </div>
    </article>
</section>
