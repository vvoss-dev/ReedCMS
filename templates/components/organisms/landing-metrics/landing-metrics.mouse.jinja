{# Landing Metrics Organism - Performance metrics display #}

<section class="section metrics padding-y-5 padding-x-4">
    <article class="breakbox grid-1">
        <div class="section-header padding-left-2 margin-bottom-1">
            <h2>{{ 'landing.metrics.title' | text('auto') }}</h2>
            <p class="description">{{ 'landing.metrics.subtitle' | text('auto') }}</p>
        </div>

        {% set grid_classes = "grid-1 gap-y-3" %}
        {% if client.breakpoint == "tablet" %}
            {% set grid_classes = "grid-3 gap-x-1" %}
        {% elif client.breakpoint == "screen" or client.breakpoint == "wide" %}
            {% set grid_classes = "grid-3 gap-x-2" %}
        {% endif %}

        <div class="metrics-grid {{ grid_classes }}">
            <div class="metric-item grid-1 gap-y-1">
                <div class="metric-number">{{ 'landing.metrics.item3.number' | text('auto') }}</div>
                <p class="metric-label">{{ 'landing.metrics.item3.label' | text('auto') }}</p>
                <p class="metric-description">{{ 'landing.metrics.item3.description' | text('auto') | safe }}</p>
            </div>
            <div class="metric-item grid-1 gap-y-1">
                <div class="metric-number">{{ 'landing.metrics.item2.number' | text('auto') }}</div>
                <p class="metric-label">{{ 'landing.metrics.item2.label' | text('auto') }}</p>
                <p class="metric-description">{{ 'landing.metrics.item2.description' | text('auto') | safe }}</p>
            </div>
            <div class="metric-item grid-1 gap-y-1">
                <div class="metric-number">{{ 'landing.metrics.item1.number' | text('auto') }}</div>
                <p class="metric-label">{{ 'landing.metrics.item1.label' | text('auto') }}</p>
                <p class="metric-description">{{ 'landing.metrics.item1.description' | text('auto') | safe }}</p>
            </div>
        </div>
    </article>
</section>
