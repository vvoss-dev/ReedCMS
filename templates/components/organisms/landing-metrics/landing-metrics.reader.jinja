{# Landing Metrics Organism - Reader interaction mode #}

{% set items = ["1", "2", "3"] %}

<section>
    <h2>{{ 'landing.metrics.title' | text('auto') }}</h2>
    <p>{{ 'landing.metrics.subtitle' | text('auto') }}</p>

    {# Metrics as definition list for semantic meaning #}
    <dl>
        {% for item_num in items %}
            {% set number_key = "landing.metrics.item" ~ item_num ~ ".number" %}
            {% set label_key = "landing.metrics.item" ~ item_num ~ ".label" %}
            {% set desc_key = "landing.metrics.item" ~ item_num ~ ".description" %}
            <dt>{{ label_key | text('auto') }}</dt>
            <dd>{{ number_key | text('auto') | safe }} - {{ desc_key | text('auto') | safe }}</dd>
        {% endfor %}
    </dl>
</section>
