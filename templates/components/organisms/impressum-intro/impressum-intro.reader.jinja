{# Impressum intro section - Reader/Bot mode #}

<section class="section intro" role="contentinfo">
    <article>
        <h1>{{ 'impressum.title' | text('auto') }}</h1>

        <section>
            <h2>{{ 'impressum.responsible.title' | text('auto') }}</h2>
            <address>
                {{ 'impressum.responsible.name' | text('auto') }}<br>
                {{ 'impressum.responsible.street' | text('auto') }}<br>
                {{ 'impressum.responsible.city' | text('auto') }}<br>
                {{ 'impressum.responsible.country' | text('auto') }}
            </address>
        </section>

        <section>
            <h2>{{ 'impressum.contact.title' | text('auto') }}</h2>
            <dl>
                <dt>{{ 'impressum.contact.email.label' | text('auto') }}</dt>
                <dd><a href="mailto:{{ 'impressum.contact.email.value' | text('auto') }}">{{ 'impressum.contact.email.value' | text('auto') }}</a></dd>

                <dt>{{ 'impressum.contact.web.label' | text('auto') }}</dt>
                <dd><a href="https://vvoss.dev">vvoss.dev</a></dd>
            </dl>
        </section>

        <section>
            <h2>{{ 'impressum.legal.title' | text('auto') }}</h2>
            <p>{{ 'impressum.legal.disclaimer' | text('auto') }}</p>
        </section>

        <section>
            <h2>{{ 'impressum.privacy.title' | text('auto') }}</h2>
            <p>{{ 'impressum.privacy.text' | text('auto') }}</p>
        </section>
    </article>
</section>