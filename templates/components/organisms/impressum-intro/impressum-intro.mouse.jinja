{# Impressum intro section - Mouse interaction mode #}

<section class="section intro padding-y-3 padding-x-4">
    <article class="breakbox grid-1 gap-3">
        <div class="section-header padding-left-2">
            <h1>{{ 'impressum.title' | text('auto') }}</h1>
        </div>
        
        {# Two-column layout for desktop #}
        <div class="impressum grid-2 gap-3">
            <div class="column grid-1 gap-y-1">
                <h2>{{ 'impressum.responsible.title' | text('auto') }}</h2>
                <p>
                    {{ 'impressum.responsible.name' | text('auto') }}<br>
                    {{ 'impressum.responsible.street' | text('auto') }}<br>
                    {{ 'impressum.responsible.city' | text('auto') }}<br>
                    {{ 'impressum.responsible.country' | text('auto') }}
                </p>
                
                <h3>{{ 'impressum.contact.title' | text('auto') }}</h3>
                <p>
                    {{ 'impressum.contact.email.label' | text('auto') }} 
                    <a href="mailto:{{ 'impressum.contact.email.value' | text('auto') }}" class="email-link">{{ 'impressum.contact.email.value' | text('auto') }}</a><br>
                    {{ 'impressum.contact.web.label' | text('auto') }} 
                    <a href="https://vvoss.dev">vvoss.dev</a>
                </p>
            </div>
            
            <div class="column grid-1 gap-y-1">
                <h2>{{ 'impressum.legal.title' | text('auto') }}</h2>
                <p>{{ 'impressum.legal.disclaimer' | text('auto') }}</p>
                
                <h3>{{ 'impressum.privacy.title' | text('auto') }}</h3>
                <p>{{ 'impressum.privacy.text' | text('auto') }}</p>
            </div>
        </div>
    </article>
</section>