{# Page Header Organism - Reader/bot mode - simplified semantic structure #}

{% set pages = ["knowledge", "portfolio", "blog", "impressum"] %}

<section class="section header">
    <nav role="navigation" aria-label="{{ 'page.header.main.label' | text('auto') or ('Main navigation') }}">

        {# Simple text-based logo/title for bots and screen readers #}
        <h1>
            <a href="/{{ client.lang }}/">
                {{ 'page.header.logo.name' | text('auto') }} - {{ 'page.header.logo.title' | text('auto') }}
            </a>
        </h1>

        {# Clean navigation list without decorative elements - modernized with route filter #}
        <ul>
            {% for pagekey in pages %}
                <li>
                    <a href="/{{ client.lang }}/{% if pagekey != 'landing' %}{{ reed['pageroute@' + pagekey] }}/{% endif %}"
                       {% if current_pagekey == pagekey %}aria-current="page"{% endif %}>
                        {{ ("page.header." ~ pagekey ~ ".text") | text('auto') }}
                    </a>
                </li>
            {% endfor %}

            {# Language alternatives for SEO and accessibility #}
            {% if client.lang == "en" %}
                <li>
                    <a href="/de/{% if reed.pageroute %}{{ reed.pageroute }}{% endif %}" hreflang="de" lang="de">
                        {{ 'page.header.lang.de.text' | text('auto') or ('DE') }}
                    </a>
                </li>
            {% else %}
                <li>
                    <a href="/en/{% if reed.pageroute %}{{ reed.pageroute }}{% endif %}" hreflang="en" lang="en">
                        {{ 'page.header.lang.en.text' | text('auto') or ('EN') }}
                    </a>
                </li>
            {% endif %}
        </ul>
    </nav>
</section>
