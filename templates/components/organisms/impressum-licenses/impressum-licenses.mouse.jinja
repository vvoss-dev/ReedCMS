                    <h3>{{ 'impressum.licenses.feather.title' | text('auto') }}</h3>
                    <p>{{ 'impressum.licenses.feather.text' | text('auto') }}</p>
                </div>

                <div class="license-block">
                    <h3>{{ 'impressum.licenses.svg.title' | text('auto') }}</h3>
                    <p>{{ 'impressum.licenses.svg.text' | text('auto') }}</p>
