{# Page Footer Organism - Full tech stack showcase with modern translation system #}

<!-- Performance matters. This page loads fast and stays fast. -->
<!-- Built with Rust + Actix-Web. Zero JavaScript bloat. -->
<footer class="footer padding-y-2 padding-x-1">
    <section class="footer-content grid-1 gap-y-2">
        {# Tech stack description #}
        <div class="footer-tech">
            {{ 'PAGE_FOOTER_TECH_DESCRIPTION' | text('auto') }}
        </div>

        {# Complete technology logos showcase #}
        <div class="footer-tech-logos">
            <img src="/public/static/assets/images/logos/logo_freebsd.svg" alt="FreeBSD" width="32" height="32" loading="lazy">
            <img src="/public/static/assets/images/logos/logo_nginx.svg" alt="nginx" width="32" height="32" loading="lazy">
            <img src="/public/static/assets/images/logos/logo_rust.svg" alt="Rust" width="32" height="32" loading="lazy">
            <img src="/public/static/assets/images/logos/logo_html5.svg" alt="HTML5" width="32" height="32" loading="lazy">
            <img src="/public/static/assets/images/logos/logo_css3.svg" alt="CSS3" width="32" height="32" loading="lazy">
            <img src="/public/static/assets/images/logos/logo_javascript.svg" alt="JavaScript" width="32" height="32" loading="lazy">
        </div>

        {# Copyright #}
        <div class="footer-copyright">
            © {{ current_year }} Vivian Voss. {{ 'PAGE_FOOTER_COPYRIGHT_TEXT' | text('auto') }}
        </div>

        {# Development info (only in dev mode) #}
        {% if config.dev_mode %}
        <div class="footer-dev">
            <details>
                <summary>{{ 'PAGE_FOOTER_DEV_INFO_TITLE' | text('auto') }}</summary>
                <ul>
                    <li>{{ 'PAGE_FOOTER_DEV_LANGUAGE' | text('auto') }}: {{ client.language }}</li>
                    <li>{{ 'PAGE_FOOTER_DEV_DEVICE' | text('auto') }}: {{ client.device_type }}</li>
                    <li>{{ 'PAGE_FOOTER_DEV_BREAKPOINT' | text('auto') }}: {{ client.breakpoint }}</li>
                    <li>{{ 'PAGE_FOOTER_DEV_MODE' | text('auto') }}: {{ client.interaction_mode }}</li>
                    {% if client.screen_width %}
                    <li>{{ 'PAGE_FOOTER_DEV_SCREEN' | text('auto') }}: {{ client.screen_width }}×{{ client.screen_height }}</li>
                    {% endif %}
                    {% if client.viewport_width %}
                    <li>{{ 'PAGE_FOOTER_DEV_VIEWPORT' | text('auto') }}: {{ client.viewport_width }}×{{ client.viewport_height }}</li>
                    {% endif %}
                    {% if client.dpr %}
                    <li>{{ 'PAGE_FOOTER_DEV_DPR' | text('auto') }}: {{ client.dpr }}</li>
                    {% endif %}
                </ul>
            </details>
        </div>
        {% endif %}
    </section>
</footer>