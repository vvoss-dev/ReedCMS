{# Intro Section #}
<section class="section intro">
    <article>
        <div>
            <h1>{{ (topic ~ '_TITLE') | text('auto') }}</h1>
        </div>

        <div>
            <h2>{{ (topic ~ '_TITLE') | text('auto') }}</h2>
            <dl>
                <dt>{{ (topic ~ '_CATEGORY_LABEL') | text('auto') }}</dt>
                <dd>{{ (topic ~ '_CATEGORY_VALUE') | text('auto') }}</dd>

                <dt>{{ (topic ~ '_STABLE_LABEL') | text('auto') }}</dt>
                <dd>{{ (topic ~ '_STABLE_VALUE') | text('auto') }}</dd>

                <dt>{{ (topic ~ '_CREATOR_LABEL') | text('auto') }}</dt>
                <dd>{{ (topic ~ '_CREATOR_VALUE') | text('auto') }}</dd>

                <dt>{{ (topic ~ '_PROJECT_LABEL') | text('auto') }}</dt>
                <dd>{{ (topic ~ '_PROJECT_VALUE' | text('auto') | safe }}</dd>

                <dt>{{ (topic ~ '_SYNTAX_LABEL') | text('auto') }}</dt>
                <dd>{{ (topic ~ '_SYNTAX_VALUE') | text('auto') }}</dd>

                <dt>{{ (topic ~ '_SECURITY_LABEL') | text('auto') }}</dt>
                <dd>{{ (topic ~ '_SECURITY_VALUE') | text('auto') }}</dd>

                <dt>{{ (topic ~ '_PERFORMANCE_LABEL') | text('auto') }}</dt>
                <dd>{{ (topic ~ '_PERFORMANCE_VALUE') | text('auto') }}</dd>
            </dl>
        </div>

        <div>
            <h2>Beschreibung</h2>
            <p>{{ (topic ~ '_DESCRIPTION') | text('auto') }}</p>
            <hr>
            <p>{{ (topic ~ '_ENTERPRISE') | text('auto') }}</p>
        </div>
    </article>
</section>

