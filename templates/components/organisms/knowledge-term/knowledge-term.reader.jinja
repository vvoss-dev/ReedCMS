{# Intro Section #}
<section class="section intro">
    <article>
        <div>
            <h1>{{ (topic ~ '.title') | text('auto') }}</h1>
        </div>

        <div>
            <h2>{{ (topic ~ '.title') | text('auto') }}</h2>
            <dl>
                <dt>{{ (topic ~ '.category.label') | text('auto') }}</dt>
                <dd>{{ (topic ~ '.category.value') | text('auto') }}</dd>

                <dt>{{ (topic ~ '.stable.label') | text('auto') }}</dt>
                <dd>{{ (topic ~ '.stable.value') | text('auto') }}</dd>

                <dt>{{ (topic ~ '.creator.label') | text('auto') }}</dt>
                <dd>{{ (topic ~ '.creator.value') | text('auto') }}</dd>

                <dt>{{ (topic ~ '.project.label') | text('auto') }}</dt>
                <dd>{{ (topic ~ '.project.value') | text('auto') | safe }}</dd>

                <dt>{{ (topic ~ '.syntax.label') | text('auto') }}</dt>
                <dd>{{ (topic ~ '.syntax.value') | text('auto') }}</dd>

                <dt>{{ (topic ~ '.security.label') | text('auto') }}</dt>
                <dd>{{ (topic ~ '.security.value') | text('auto') }}</dd>

                <dt>{{ (topic ~ '.performance.label') | text('auto') }}</dt>
                <dd>{{ (topic ~ '.performance.value') | text('auto') }}</dd>
            </dl>
        </div>

        <div>
            <h2>Beschreibung</h2>
            <p>{{ (topic ~ '.description') | text('auto') }}</p>
            <hr>
            <p>{{ (topic ~ '.enterprise') | text('auto') }}</p>
        </div>
    </article>
</section>

