{# Knowledge Term Organism - Reusable template for ALL knowledge terms #}
{#
   This organism consolidates 25+ device-specific knowledge-term templates
   into one reusable component following CMS pattern recognition.

   Content is injected via the calling layout's .text.csv file.
   Generic labels come from this organism's .text.csv file.
#}

{# Intro Section - Technical details and metadata #}
<section class="section intro padding-y-3 padding-x-4">
    <article class="breakbox grid-1 gap-3">
        <div class="section-header padding-left-2">
            <h1>{{ (topic ~ '.title') | text('auto') }}</h1>
        </div>

        {# Two-column layout for desktop #}
        <div class="impressum grid-2 gap-3">
            <div class="column grid-1 gap-y-1">
                <h2>{{ (topic ~ '.title') | text('auto') }}</h2>
                <p>
                    <strong>{{ (topic ~ '.category.label') | text('auto') }}:</strong> {{ (topic ~ '.category.value') | text('auto') }}<br>
                    <strong>{{ (topic ~ '.stable.label') | text('auto') }}:</strong> {{ (topic ~ '.stable.value') | text('auto') }}<br>
                    <strong>{{ (topic ~ '.creator.label') | text('auto') }}:</strong> {{ (topic ~ '.creator.value') | text('auto') }}<br>
                    <strong>{{ (topic ~ '.project.label') | text('auto') }}:</strong> {{ (topic ~ '.project.value') | text('auto') | safe }}
                </p>

                <h3>{{ (topic ~ '.syntax.label') | text('auto') }}</h3>
                <p>{{ (topic ~ '.syntax.value') | text('auto') }}</p>

                <h3>{{ (topic ~ '.security.label') | text('auto') }}</h3>
                <p>{{ (topic ~ '.security.value') | text('auto') }}</p>

                <h3>{{ (topic ~ '.performance.label') | text('auto') }}</h3>
                <p>{{ (topic ~ '.performance.value') | text('auto') }}</p>
            </div>

            <div class="column grid-1 gap-y-1">
                <h2>{{ 'knowledge.term.description.label' | text('auto') or 'Beschreibung' }}</h2>
                <p>{{ (topic ~ '.description') | text('auto') }}</p>
                <hr>
                <p>{{ (topic ~ '.enterprise') | text('auto') }}</p>
            </div>
        </div>
    </article>
</section>

{# Compare Section - Pros vs Cons evaluation #}
<section class="section compare padding-y-5 padding-x-4">
    <article class="breakbox grid-1">
        <div class="section-header padding-left-2 margin-bottom-1">
            <h2>{{ (topic ~ '.compare.title') | text('auto') }}</h2>
            <p class="description">{{ (topic ~ '.compare.subtitle') | text('auto') }}</p>
        </div>

        {# Responsive grid layout based on client breakpoint #}
        {% set grid_classes = "grid-1 gap-y-3" %}

        {% if client.breakpoint == "tablet" %}
            {% set grid_classes = "grid-2 gap-x-1" %}
        {% elif client.breakpoint == "screen" or client.breakpoint == "wide" %}
            {% set grid_classes = "grid-2 gap-x-2" %}
        {% endif %}

        <div class="compare-grid {{ grid_classes }}">
            {# NO column (cons) #}
            <div class="compare-column no padding-2">
                <h3 class="padding-bottom-2 margin-bottom-2">{{ (topic ~ '.cons.title') | text('auto') }}</h3>
                <ul class="compare-list">
                    <li class="padding-y-1 padding-left-2">{{ (topic ~ '.cons.1') | text('auto') }}</li>
                    <li class="padding-y-1 padding-left-2">{{ (topic ~ '.cons.2') | text('auto') }}</li>
                    <li class="padding-y-1 padding-left-2">{{ (topic ~ '.cons.3') | text('auto') }}</li>
                    <li class="padding-y-1 padding-left-2">{{ (topic ~ '.cons.4') | text('auto') }}</li>
                    <li class="padding-y-1 padding-left-2">{{ (topic ~ '.cons.5') | text('auto') }}</li>
                </ul>
            </div>

            {# YES column (pros) #}
            <div class="compare-column yes padding-2">
                <h3 class="padding-bottom-2 margin-bottom-2">{{ (topic ~ '.pros.title') | text('auto') }}</h3>
                <ul class="compare-list">
                    <li class="padding-y-1 padding-left-2">{{ (topic ~ '.pros.1') | text('auto') }}</li>
                    <li class="padding-y-1 padding-left-2">{{ (topic ~ '.pros.2') | text('auto') }}</li>
                    <li class="padding-y-1 padding-left-2">{{ (topic ~ '.pros.3') | text('auto') }}</li>
                    <li class="padding-y-1 padding-left-2">{{ (topic ~ '.pros.4') | text('auto') }}</li>
                    <li class="padding-y-1 padding-left-2">{{ (topic ~ '.pros.5') | text('auto') }}</li>
                </ul>
            </div>
        </div>
    </article>
</section>
