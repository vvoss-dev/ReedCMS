{# Page placeholder organism - Generic placeholder content #}
<section class="section padding-y-3 padding-x-4">
    <article class="breakbox grid-1">
        <div class="section-header padding-left-2">
            <h1>{{ 'page.placeholder.title' | text('auto') }}</h1>
            {% if 'page.placeholder.subtitle' | text('auto') %}
            <p class="subtitle">{{ 'page.placeholder.subtitle' | text('auto') }}</p>
            {% endif %}
        </div>

        <div class="placeholder-content padding-2">
            {% if 'page.placeholder.email' | text('auto') %}
            {# Contact-specific content #}
            <div class="contact-email">
                <strong>Email:</strong> {{ 'page.placeholder.email' | text('auto') }}
            </div>

            {% if 'page.placeholder.availability.de' | text('auto') %}
            <div class="availability-info margin-top-2">
                <p>{{ 'page.placeholder.availability.de' | text('auto') | safe }}</p>
            </div>
            {% endif %}
            {% else %}
            {# Generic placeholder content #}
            <div class="placeholder-message">
                <p>{{ 'page.placeholder.message' | text('auto') }}</p>
            </div>
            {% endif %}
        </div>
    </article>
</section>
