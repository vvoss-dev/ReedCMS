{# Landing Problems Organism - Reader/bot mode - simplified semantic structure #}

{% set cards = ["1", "2", "3"] %}

<section>
    <h2>{{ 'LANDING_PROBLEMS_TITLE' | text('auto') }}</h2>
    <p>{{ 'LANDING_PROBLEMS_SUBTITLE' | text('auto') }}</p>

    {# Problems as semantic articles for better SEO/accessibility #}
    {% for card_num in cards %}
        {% set number_key = "LANDING_PROBLEMS_CARD" ~ card_num ~ "_NUMBER" %}
        {% set title_key = "LANDING_PROBLEMS_CARD" ~ card_num ~ "_TITLE" %}
        {% set desc_key = "LANDING_PROBLEMS_CARD" ~ card_num ~ "_DESCRIPTION" %}
        <article>
            <h3>{{ number_key | text('auto') }}. {{ title_key | text('auto') }}</h3>
            <p>{{ desc_key | text('auto') }}</p>
        </article>
    {% endfor %}
</section>