{# Landing Problems Organism - Reader/bot mode - simplified semantic structure #}

{% set cards = ["1", "2", "3"] %}

<section>
    <h2>{{ 'landing.problems.title' | text('auto') }}</h2>
    <p>{{ 'landing.problems.subtitle' | text('auto') }}</p>

    {# Problems as semantic articles for better SEO/accessibility #}
    {% for card_num in cards %}
        {% set number_key = "landing.problems.card" ~ card_num ~ ".number" %}
        {% set title_key = "landing.problems.card" ~ card_num ~ ".title" %}
        {% set desc_key = "landing.problems.card" ~ card_num ~ ".description" %}
        <article>
            <h3>{{ number_key | text('auto') }}. {{ title_key | text('auto') }}</h3>
            <p>{{ desc_key | text('auto') | safe }}</p>
        </article>
    {% endfor %}
</section>
