{# Landing Contact Organism - Contact information section #}

<section class="section contact padding-y-5 padding-x-4" id="contact">
    <article class="breakbox grid-1">
        <div class="section-header" style="text-align: center; border: none; padding: 0;">
            <h2>{{ 'landing.contact.title' | text('auto') }}</h2>
            <p class="description">{{ 'landing.contact.subtitle' | text('auto') }}</p>
        </div>

        <div class="contact-info">
            {% include "components/molecules/svg-icon/svg-icon.jinja" with {icon: "mail", size: "32", class: "contact-icon"} %}
            <span>{{ 'landing.contact.email' | text('auto') }}</span>
        </div>

        <p class="contact-details">
            {{ 'landing.contact.availability' | text('auto') }}
        </p>
    </article>
</section>
